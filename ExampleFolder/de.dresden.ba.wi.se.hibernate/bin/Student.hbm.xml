<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="de.dresden.ba.wi.se.hibernate.domainModel.Student" table="Students">
		<!-- A short description -->
		<meta attribute="class-description">This class contains...</meta>
		
		<!-- Auto generate primary key "id" -->
		<id name="id" type="int" column="id">
			<generator class="native"/>
		</id>
		
		<!-- Type mapping -->
		<property name="firstName" column="first_name" type="string"/>
		<property name="lastName" column="last_name" type="string"/>
		<property name="registrationNumber" column="registration_number" type="string"/>
	</class>
</hibernate-mapping>